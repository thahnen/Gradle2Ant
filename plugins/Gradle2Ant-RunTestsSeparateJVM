<?xml version="1.0" encoding="UTF-8" ?>
<project name="Gradle2Ant-RunTestsSeparateJVM">
    <description>
        Call Gradle from Ant - Gradle unofficial RunTestSeparateJVMPlugin:
        (https://github.com/thahnen/RunTestsSeparateJVMPlugin)
    </description>

    <!-- General properties! -->
    <dirname property="current.dir" file="${ant.file}" />

    <!-- import general Gradle2Ant.xml library -->
    <import file="${current.dir}/../Gradle2Ant.xml" />


    <!-- Gradle task "testSeparateJVMSequentially" to run jUnit tests in separate JVM sequentially -->
    <macrodef name="gradle.testSeparateJVMSequentially" description="Gradle task 'testSeparateJVMSequentially'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="testSeparateJVMSequentially"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>

    <!-- Gradle task "testSeparateJVMInParallel" to run jUnit tests in separate JVM in parallel -->
    <macrodef name="gradle.testSeparateJVMInParallel" description="Gradle task 'testSeparateJVMInParallel'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="testSeparateJVMInParallel"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>
</project>

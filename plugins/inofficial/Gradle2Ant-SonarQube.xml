<?xml version="1.0" encoding="UTF-8" ?>
<project name="Gradle2Ant-SonarQube">
    <description>
        Call Gradle from Ant - Gradle unofficial SonarQube plugin:
        (https://docs.sonarqube.org/latest/analysis/scan/sonarscanner-for-gradle/)
    </description>

    <!-- General properties! -->
    <dirname property="current.dir" file="${ant.file}" />

    <!-- import general Gradle2Ant.xml library -->
    <import file="../../Gradle2Ant.xml" />


    <!-- Gradle task "sonarqube" to run a static code analysis using SonarQube -->
    <macrodef name="gradle.sonarqube" description="Gradle task 'sonarqube'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="sonarqube"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>
</project>

<?xml version="1.0" encoding="UTF-8" ?>
<project name="Gradle2Ant-EAR">
    <description>
        Call Gradle from Ant - Gradle EAR plugin!
    </description>

    <!-- General properties! -->
    <dirname property="current.dir" file="${ant.file}" />

    <!-- import general Gradle2Ant.xml library -->
    <import file="../Gradle2Ant.xml" />


    <!-- Gradle task "ear" to create enterprise archive -->
    <macrodef name="gradle.ear" description="Gradle task 'ear'">
        <attribute name="args" default="" />
        <attribute name="wrapper" default="gradle" />
        <attribute name="dir" default="${current.dir}" />

        <sequential>
            <gradle task="ear" args="@{args}" wrapper="@{wrapper}" dir="@{dir}" />
        </sequential>
    </macrodef>
</project>

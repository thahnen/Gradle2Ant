<?xml version="1.0" encoding="UTF-8" ?>
<project name="Gradle2Ant-Scala">
    <description>
        Call Gradle from Ant - Gradle Scala plugin!
    </description>

    <!-- General properties! -->
    <dirname property="current.dir" file="${ant.file}" />

    <!-- import general Gradle2Ant.xml library -->
    <import file="../../Gradle2Ant.xml" />


    <!-- Gradle task "compileScala" to compile Scala source files after Java code -->
    <macrodef name="gradle.compileScala" description="Gradle task 'compileScala'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="compileScala"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>

    <!-- Gradle task "compileScalaGroovy" to compile Scala test source files after Java code -->
    <macrodef name="gradle.compileScalaGroovy" description="Gradle task 'compileScalaGroovy'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="compileScalaGroovy"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>


    <!-- Gradle task "scaladoc" to create Scala documentation (equivalten to "javadoc") -->
    <macrodef name="gradle.scaladoc" description="Gradle task 'scaladoc'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="scaladoc"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>
</project>

<?xml version="1.0" encoding="UTF-8" ?>
<project name="Gradle2Ant-Eclipse">
    <description>
        Call Gradle from Ant - Gradle Eclipse plugin!
    </description>

    <!-- General properties! -->
    <dirname property="current.dir" file="${ant.file}" />

    <!-- import general Gradle2Ant.xml library -->
    <import file="../Gradle2Ant.xml" />


    <!-- Gradle task "eclipse" to generate Eclipse configuration files -->
    <macrodef name="gradle.eclipse" description="Gradle task 'eclipse'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="eclipse"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>

    <!-- Gradle task "cleanEclipse" to remove (generated) Eclipse configuration files -->
    <macrodef name="gradle.cleanEclipse" description="Gradle task 'cleanEclipse'">
        <attribute name="project"   default="" />
        <attribute name="args"      default="" />
        <attribute name="wrapper"   default="gradle" />
        <attribute name="dir"       default="${current.dir}" />

        <sequential>
            <gradle task="cleanEclipse"
                    project="@{project}"
                    args="@{args}"
                    wrapper="@{wrapper}"
                    dir="@{dir}" />
        </sequential>
    </macrodef>
</project>
